# FinOps Agent Environment Configuration Template
# Copy this file to .env and fill in your specific values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id-here

# API Endpoints
API_GATEWAY_ENDPOINT=https://your-api-gateway-id.execute-api.us-east-1.amazonaws.com/prod
WEBSOCKET_API_ENDPOINT=wss://your-websocket-api-id.execute-api.us-east-1.amazonaws.com/prod
LEGACY_API_ENDPOINT=https://your-legacy-api-id.execute-api.us-east-1.amazonaws.com/prod/query
MAIN_API_ENDPOINT=https://your-main-api-id.execute-api.us-east-1.amazonaws.com/prod
LAMBDA_FUNCTION_URL=https://your-lambda-function-url.lambda-url.us-east-1.on.aws/

# S3 Configuration
DEPLOYMENT_BUCKET=your-deployment-bucket-name

# Amplify Configuration
AMPLIFY_APP_ID=your-amplify-app-id
AMPLIFY_APP_URL=your-app-url.amplifyapp.com

# ECR Configuration
ECR_REPOSITORY_URI=your-account-id.dkr.ecr.us-east-1.amazonaws.com/your-repo-name

# Cognito Configuration
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_APP_CLIENT_ID=your-app-client-id
COGNITO_IDENTITY_POOL_ID=your-identity-pool-id

# Lambda Function Names
SUPERVISOR_AGENT_FUNCTION_NAME=AWS-FinOps-Agent
COST_FORECAST_AGENT_FUNCTION_NAME=aws-cost-forecast-agent
TRUSTED_ADVISOR_AGENT_FUNCTION_NAME=trusted-advisor-agent-trusted-advisor-agent
BUDGET_MANAGEMENT_AGENT_FUNCTION_NAME=budget-management-agent
